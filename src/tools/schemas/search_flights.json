{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "search_flights",
  "type": "object",
  "required": ["date", "from", "to"],
  "additionalProperties": false,
  "properties": {
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "from": {
      "type": "string",
      "minLength": 3
    },
    "to": {
      "type": "string",
      "minLength": 3
    }
  }
}
